<?php
    $reply = array();
    $reply['form'] = $this->form->__toString();
    
    if(!is_null($this->reply)){
        $reply['reply'] = $this->reply[0];
        $user_model = new Application_Model_Users();
        $user = $user_model->getUserById($this->reply[0]["user_id"]);
        $reply['user_name'] = $user[0]["name"];
        $reply['user_image'] = $user[0]["image"];
        $reply['user_country'] = $user[0]["country"];
      
    }
    
    
    
    $reply['info'] = array(); 
    
    echo json_encode($reply);
    
?>
